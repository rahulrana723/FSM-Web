@model FSM.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_LayoutPassword.cshtml";
}

<body id="login">
    <section id="loginForm">
        <div class="login_block" style="margin:60px auto">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <figure> <img src="~/Content/images/logo.png" alt="logo"></figure>
                @Html.AntiForgeryToken()
                <hr />
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.PasswordFor(m => m.OldPassword, new { oncopy = "return false", onpaste = "return false", @id = "input_background", @class = "form-control pswd", placeholder = "Old password." })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.NewPassword, new { oncopy = "return false", onpaste = "return false", @id = "input_background", @class = "form-control pswd", placeholder = "New password." })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { oncopy = "return false", onpaste = "return false", @id = "input_background", @class = "form-control pswd", placeholder = "Confirm password." })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-0 col-md-11">
                        <input type="submit" value="Change password" class="btn btn-default sign_in btn_black" />
                        <input type="button" value="Back" class="btn btn-default btn_black back" onclick="@("window.location.href='" + @Url.Action("Dashboard", "Admin") + "'");" />
                    </div>
                </div>
            }
            </div>
</section>
</body>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
