@model FSM.Web.Areas.Customer.ViewModels.CustomerBillingAddressListViewModel
<div class="new_emp_tab outer_box">
    <div class="row">

        @*search box*@
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-9">
                     @Html.TextBox("Name", "", new { @class = "form-control form_textbox contacts_serch text-box single-line BillingSrchBox", placeholder = "Search Keyword" })
                </div>

                <div class="col-md-3">
                    <input type="button" value="Search" class="btn btn-default search_doc" id="btnbillingsearch" />
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <input type="button" value="Add Customer Billing" class="btn btn-default" data-hidebillingbtn="true" id="addcustomerbilling" />
        </div>
    </div>
</div>

<style>
    .formcontrol_outer {
        background: #f4f4f4 none repeat scroll 0 0;
        float: left;
        padding: 20px;
        width: 100%;
        margin: 0 0 20px 0;
    }

    .textbox {
        background: #f4f4f4 none repeat scroll 0 0;
        border: 1px solid #a5a5a5;
        border-radius: 0;
        box-shadow: 0 0 0 0 rgba(0, 0, 0, 0);
        color: #444444;
        height: 40px;
        margin: 10px 0;
        padding: 6px;
    }

    .search {
        display: inline-block;
        background: #2a2d33 none repeat scroll 0 0 !important;
        border-color: #3c3c3c !important;
        color: #fff !important;
        border-radius: 0;
        padding: 9px 26px;
        margin: 28px 0 0 0;
        height: 40px;
    }

    .customer {
        display: inline-block;
        background: #93c749 none repeat scroll 0 0;
        border-color: #93c749;
        color: #ffffff;
        margin: 27px 0 0 0;
        border-radius: 0;
        padding: 10px 25px;
    }
</style>
