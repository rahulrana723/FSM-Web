        <div class="report_template">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table text-center">
                        <thead>
                            <tr>
                                <th>Employee Name</th>
                                <th>ID</th>
                                <th>Job Date</th>
                                <th>Hours Worked</th>
                                <th>Hours Traveled</th>
                                <th>Lunch Break</th>
                                <th>Personal Time</th>
                                <th>Hours Total</th>
                                <th>First to Last Hour</th>
                                <th>Lunch Time(30 min)</th>
                                <th>Corrected Time</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var val in Model)
                            {
                                <tr class="success" style="page-break-inside: avoid;">
                                    <td>

                                        <p>@val.EmployeeName</p>

                                    </td>
                                    <td>

                                        <p>@val.EID</p>

                                    </td>
                                    <td>

                                        <p>@val.jobDate.Value.ToString("yyyy/MM/dd")</p>

                                    </td>
                                    <td>


                                        <p>@val.Hours_Worked</p>



                                    </td>
                                    <td>


                                        <p>@val.Hours_Traveled</p>


                                    </td>
                                    <td>


                                        <p>@val.Lunch_Break </p>


                                    </td>
                                    <td>


                                        <p>@val.Personal_Time </p>


                                    </td>

                                    <td>
                                        @if (!String.IsNullOrEmpty(val.HoursTotal))
                                        {
                                            <p>@val.HoursTotal </p>
                                        }
                                        else
                                        { <p>@("0.0")</p>}
                                    </td>
                                    <td>


                                        <p>@val.FTOLHour</p>



                                    </td>
                                    <td>


                                        <p>@val.LucnchTime</p>


                                    </td>
                                    <td>


                                        <p>@val.CorrectedTime</p>



                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-danger">
                        <strong>!</strong>No Record found !
                    </div>
