@model FSM.Web.Areas.Employee.ViewModels.JobsViewModel

@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;" />
    <title>Invoice Template</title>
    <!-- STYLESHEET FIrLE -->
    @*<link href="css/font-awesome.min.css" type="text/css" rel="stylesheet" />*@
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet" />
    @*<link href="css/style.css" type="text/css" rel="stylesheet" />*@
    <link href="~/Content/css/templatestyle.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <!--  SCRIPTS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="~/Areas/Employee/Scripts/EditInvoiceJob.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <title>InvoiceExport</title>
</head>
<body onload="window.print();">
    <div class="invoice_template">
        <div class="table-responsive">
            <table>
                <tbody>
                    <tr>
                        <td align="center" colspan="2"><img src="~/Content/images/SR&G Logo.jpg" alt=""></td>
                    </tr>

                    <tr>
                        <td>
                            <div class="logo">
                                <p>SYDNEY GUTTERCLEAN</p>
                                <p>SYDNEY ANCHOR POINTS</p>
                                <p>SYDNEY ROOF &amp; GUTTER </p>
                                <p>are divisions of DL &amp; MG Thomas</p>
                                <p>Licensed Roof Plimbers L# 241729C</p>
                                <p>A.B. 87677002504</p>
                            </div>
                        </td>
                        <td>
                            <div class="contact_tab">
                                <p>14/5-7 Prosperity Parade</p>

                                <p>Warriewood NSW 2102</p>
                                <p>PO Box 287</p>
                                <p>Crows Nest MSW 1585</p>
                                <ul>
                                    <li>P: 028020577</li>
                                    <li>E: Info:sydneyroofandgutter.com.au</li>
                                    <li>E: accounts@sydneyroofandgutter.com.au</li>
                                    <li>W: www.sydneyroofandgutter.com.au</li>
                                </ul>

                            </div>
                        </td>
                    </tr>

                </tbody>
            </table>
            <table>
                <thead>
                    <tr>
                        <th>Job Id</th>
                        <th>Job type</th>
                        <th>Status</th>
                        <th>Booked Date</th>
                        <th>Estimated Hours</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="replace_tab">
                                @Model.JobId
                            </div>
                        </td>
                        <td class="text-right">
                            <div class="price_tab">
                                <p>@Model.JobType</p>
                            </div>
                        </td>
                        <td class="text-right">
                            <div class="price_tab">
                                <p>@Model.Status</p>
                            </div>
                        </td>
                        <td class="text-right">
                            <div class="price_tab">
                                <p>@Model.DateBooked</p>
                            </div>
                        </td>
                        <td class="text-right">
                            <div class="price_tab">
                                <p>@Model.EstimatedHours</p>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
         </div>
   </div>
</body>
</html>


<style>
.replace_tab {
    padding: 0;
    text-align: center;
}

.price_tab {
    padding: 0;
    text-align: center;
}
</style>