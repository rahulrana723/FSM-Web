@model FSM.Web.Areas.Employee.ViewModels.JobDocViewModel

<div class="modal fade" id="modalQuickView" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close closebtn" data-dismiss="modal">close</button>
                <h4 class="modal-title">Quick View !</h4>
            </div>
            <div class="modal-body Quick_Line">
                <ul>
                    @foreach (var item in Model.jobDocumentList)
                    {
                        if (item.DocType == "Pdf")
                        {
                            <li>
                                <a href='@Url.Content("~/Images/JobDocuments/" + Model.JobId + "/" + item.SaveDocName)' target="_blank">
                                    <img src='@Url.Content("~/Images/pdf.png")'title="@item.DocName" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.DocName.Length>15?item.DocName.Substring(0,15)+"...":item.DocName)</span>
                            </li>
                        }
                        else if (item.DocType == "Image")
                        {
                            <li>
                                <a href='@Url.Content("~/Images/JobDocuments/" + Model.JobId + "/" + item.SaveDocName)' target="_blank">
                                    <img src='@Url.Content("~/Images/JobDocuments/" + Model.JobId + "/" + item.SaveDocName)'title="@item.DocName" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.DocName.Length > 15 ? item.DocName.Substring(0, 15) + "..." : item.DocName)</span>
                            </li>
                        }
                        else if (item.DocType == "Word Excel")
                        {

                            <li>
                                <a href='@Url.Content("~/Images/JobDocuments/" + Model.JobId + "/" + item.SaveDocName)' target="_blank">
                                    <img src='@Url.Content("~/Images/Excel.png")' title="@item.DocName" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.DocName.Length > 15 ? item.DocName.Substring(0, 15) + "..." : item.DocName)</span>
                            </li>

                        }
                        else if (item.DocType == "Word Document")
                        {

                            <li>
                                <a href='@Url.Content("~/Images/JobDocuments/" + Model.JobId + "/" + item.SaveDocName)' target="_blank">
                                    <img src='@Url.Content("~/Images/WordDoc.png")' title="@item.DocName" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.DocName.Length > 15 ? item.DocName.Substring(0, 15) + "..." : item.DocName)</span>
                            </li>

                        }
                        else if (item.DocType == "Text File")
                        {

                            <li>
                                <a href='@Url.Content("~/Images/JobDocuments/" + Model.JobId + "/" + item.SaveDocName)' target="_blank">
                                    <img src='@Url.Content("~/Images/Text.png")' title="@item.DocName" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.DocName.Length > 15 ? item.DocName.Substring(0, 15) + "..." : item.DocName)</span>
                            </li>

                        }
                        else
                        {
                            <li>
                                <a href='@Url.Content("~/Images/JobDocuments/" + Model.JobId + "/" + item.SaveDocName)' target="_blank">
                                    <img src='@Url.Content("~/Images/imgdoc1.png")' title="@item.DocName" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.DocName.Length > 15 ? item.DocName.Substring(0, 15) + "..." : item.DocName)</span>
                            </li>
                        }

                    }
                </ul>
</div>
            <div class="modal-footer footerLine_Rmv">
            </div>
        </div>
    </div>
</div>

