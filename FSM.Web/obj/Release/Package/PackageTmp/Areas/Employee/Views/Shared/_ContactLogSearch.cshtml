@model FSM.Web.Areas.Customer.ViewModels.ContactLogSearchModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-9">
                @Html.EditorFor(model => model.Keyword, new { htmlAttributes = new { @id = "FirstNameSearch", @class = "form-control form_textbox contacts_serch", placeholder = "Search Keyword" } })
            </div>
            <div class="col-md-3">
                <button id="contactsSerch" class="btn btn-default" type="button" value="Search">Search</button>
            </div>
        </div>
    </div>
}

<script>
    $(document).on("click", "#contactsSerch", function () {
        var jobGeneralinfoid = FSM.JobId;
        var Name = $("#FirstNameSearch").val();
        var pagenum = $('.active span').text();

        $.ajax({
            url: common.SitePath + "/Employee/CustomerJob/ContactLogSearch",
            data: { JobGeneralinfoid: jobGeneralinfoid, Keyword: Name, PageNum: pagenum },
            type: 'POST',
            async: false,
            success: function (data) {
                $("#divContactPartial").empty();
                $("#divContactPartial").append(data);
            },
            error: function () {
                alert("something seems wrong");
            }
        })

    })

    $(document).on("keypress", ".contacts_serch", function (e) {

        var key = e.which;
        if (key == 13)  // the enter key code
        {
            $('#contactsSerch').click();
            return false;
        }
    });
</script>
