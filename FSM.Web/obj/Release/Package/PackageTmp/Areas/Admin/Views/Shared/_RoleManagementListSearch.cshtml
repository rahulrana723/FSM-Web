@model FSM.Web.Areas.Admin.ViewModels.RoleManagementSearchViewModel
@using FSM.Web.Common;
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="col-sm-9">
        @Html.HiddenFor(m => m.PageSize)

        @Html.EditorFor(model => model.searchkeyword, new { htmlAttributes = new { @class = "form-control", @style = "display:inline", @placeholder = " Search Keyword" } })
    </div>
    <div class="col-sm-3">
        <button type="submit" value="Search" class="btn btn-default">Search</button>
    </div>
}
