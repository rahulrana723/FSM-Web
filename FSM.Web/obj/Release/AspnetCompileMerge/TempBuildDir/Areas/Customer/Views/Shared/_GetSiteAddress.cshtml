@model IEnumerable<FSM.Web.Areas.Customer.ViewModels.SiteAddressViewModel>
<div class="modal fade" id="modalSiteAddress" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 105%;">
            <div class="modal-header">
                <button type="button" class="close closebtn" data-dismiss="modal">close</button>
                <h4 class="modal-title">Site Addresses</h4>
            </div>
            <div class="modal-body">
                <table class="table table-striped grid-table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Site Address
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Street, @item.StreetName, @item.StreetType, @item.Suburb, @item.State, @item.PostalCode
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

