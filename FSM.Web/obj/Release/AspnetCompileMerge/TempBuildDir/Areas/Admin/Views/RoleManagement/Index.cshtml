@model FSM.Web.Areas.Admin.ViewModels.RoleManagementViewModel
@using GridMvc.Html
@{
    ViewBag.Title = "Roles Management";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section scripts{
    <script>
        var FSM = {};
        FSM.EditUserRoleUrl = '@Url.Action("EditRole")';
        FSM.AddUserRoleUrl = '@Url.Action("AddRole")';
        FSM.DeleteUserRoleUrl = '@Url.Action("DeleteRole")';
        FSM.DefaultUrl = '@Url.Action("IndexParial")';
        FSM.PageSize = '@Model.roleManagementSearchViewModel.PageSize';
    </script>
    <script src="~/Areas/Admin/Scripts/RoleManagement.js"></script>
}

<meta name="viewport" content="width=device-width" />
<title>Role Management</title>
<section class="dashboard_section">
    <div class="outer_padding">
        <div class="list_heading">
            <h2>Role Management </h2>
        </div>

      
        <div class="employee_table paper-wrap bevel tlbr">
            <div id="roleMsgDv" style="display:none;"></div>
            <div class="alert alert-success jobalert" style="display:none;">
                <strong>Success!</strong> Indicates a successful or positive action.
            </div>
            <div class="outer_box2  outer_box3">
                <div >
                    <div class="col-md-6 no-pad">
                        <div class="employee-search">
                            @Html.Partial("_RoleManagementListSearch", Model.roleManagementSearchViewModel)
                        </div>
                    </div>
                    <div class="form-group col-md-2 col-md-offset-4">
                        <button type="button" value="Add Role" class="btn btn-default support_role">Add Role</button>
                    </div>
                    <div>
                    </div>
                </div>
            </div><!--new_emp_tab-->

            <div class="emp_table">
                <div class="drop_head_tab">
                    <div class="table-responsive">
                        <div id="rolesListDv">
                            @Html.Partial("_GetRolesList", Model)

                        </div>

                        @*<div style="float: left;">
                            <label class="recordCount" style="margin-left: 9px;">Total Record: @Model.aspNetRolesViewModelList.Count()</label>
                        </div>*@
                        <div style="float: right;">
                            <label>Page Size</label>
                            @Html.DropDownList("ddPageSize", new List<SelectListItem>
                           {
                             new SelectListItem { Text="5",Value="5"},
                             new SelectListItem { Text = "10", Value = "10" },
                             new SelectListItem { Text = "15", Value = "15" },
                             new SelectListItem { Text = "20", Value = "20" },
                             new SelectListItem { Text = "25", Value = "25" },
                             new SelectListItem { Text = "30", Value = "30" }
                           }, new { @class = "form-control" })
                        </div>
                    </div>
                </div>
            </div><!--emp_table-->
        </div>
    </div><!--dashboard_right_block-->
</section>

<div id="divRolePopup"></div>

