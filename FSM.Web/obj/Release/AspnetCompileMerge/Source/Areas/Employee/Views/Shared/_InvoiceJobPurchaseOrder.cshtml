<div class="modal fade" id="jobpurchaseorder" style="padding-right:10%;" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style="width:170%;">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Job Purchase Order</h4>
            </div>
            <div class="modal-body">
                <div class="dashboard_right_block">
                    <div class="alert alert-success errormsgdiv" style="display:none">
                        <strong>Danger!</strong>
                    </div>
                    <div class="employee_table">
                        <div class="customer_head_tab purchade_order_tab">
                            <form>
                                <input type="hidden" id="maxunits" />
                                <input type="hidden" id="available" />
                                <div class="form-group col-sm-2">
                                    <label>Stock Item</label>
                                    <select class="form-control ddlstock"> <option></option></select>
                                </div>
                                <div class="form-group col-sm-2">
                                    <label>Unit Measure</label>
                                    <input type="text" class="form-control" id="UnitOfMeasure" readonly="readonly">
                                </div>

                                <div class="form-group col-sm-2">
                                    <label>Qty.</label>
                                    <input type="text" class="form-control Quantity" id="Quantity" maxlength="6">
                                    <span class="errordiv"></span>
                                </div>

                                <div class="form-group col-sm-2">
                                    <label>Price</label>
                                    <input type="text" class="form-control stockprice" id="itemPrice" readonly="readonly">
                                </div>

                                <div class="form-group col-sm-2">
                                    <label> </label>
                                    <button type="button" class="btn black-btn btnAddstockitem">Add  Purchase item </button>
                                    @*<button type="button" class="btn btn-default btnclear">clear </button>*@
                                </div>

                            </form>

                        </div><!--customer_head_tab-->
                        <div class="clearfix"></div>
                        <div class="customer_table padding20 puchase_tab">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered tblstock">
                                    <thead>
                                        <tr>
                                            <th style="display:none">StockID</th>
                                            <th>Stock Item</th>
                                            <th>Unit Measure</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th style="display:none">Available</th>
                                            <th style="width:17%">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div><!--emp_table-->
                        <div class="customer_head_tab purchade_order_tab">
                            <form>
                                <div class="form-group col-sm-3">
                                    <label>Supplier</label>
                                    @Html.DropDownList("dfd", new List<SelectListItem>
                               {
                                  new SelectListItem() {Text = "--Select role--", Value="0"},
                                new SelectListItem() {Text = "Deepak", Value="B4337597-1E9A-4C9B-8BC5-2046A5DDEE73"},
                                new SelectListItem() {Text = "Deepak324", Value="206A6488-BA9B-42D0-8258-DAF38E8FA625"},
                                new SelectListItem() {Text = "Deepak", Value="9BF066E7-5ACD-48C8-8C72-DD03D52AE6F2"},
                               }, new { @class = "form-control ddlsupplier" })
                                    <span class="text-danger errorsupplier"></span>
                                </div>

                                <div class="form-group col-sm-3">
                                    <label>Description</label>
                                    <input class="form-control itemdescription" type="text">
                                </div>
                                <div class="form-group col-sm-3">
                                    <label>Cost</label>
                                    <input class="form-control" type="text" id="Cost" readonly="readonly">
                                </div>
                                <div class="form-group col-sm-3">
                                    <label></label>
                                    <button type="button" class="btn black-btn btnaddpurchaseorder">Add Purchase Order</button>
                                </div>

                            </form>

                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
