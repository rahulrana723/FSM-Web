@model FSM.Web.Areas.Employee.ViewModels.VacationViewModel
<script src="~/Areas/Employee/Scripts/EmployeeVacations.js"></script>
<div class="modal fade" id="modalEmpEditVacationAdmin" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content" style="width: 105%;">
            <div class="modal-header">
                <button type="button" class="close closebtn" data-dismiss="modal">close</button>
                <h4 class="modal-title">Edit Leave Date</h4>
            </div>
            <div id="EditVacationErrorDv" style="display:none;padding: 5px 0px 0px 18px;">

            </div>
            <div class="modal-body">
                @using (Html.BeginForm("EditVacationAdmin", "Employee", FormMethod.Post, new { @id = "editadminvacationForm" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal popUp_width">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.EmployeeId)
                        @Html.HiddenFor(m => m.Status)
                        @Html.HiddenFor(m=>m.Reason)
                        @Html.HiddenFor(m => m.Hours)
                        @Html.HiddenFor(m => m.CreatedBy)
                        @Html.HiddenFor(m => m.CreatedDate)
                        @Html.HiddenFor(m => m.OldStartDate)
                        @Html.HiddenFor(m => m.OldEndDate)
                        @Html.HiddenFor(m => m.IsDelete)

                        <div class="form-group">
                            @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.StartDate, "{0:dd/MM/yyyy}" , new {@id="StartDatePicker", @class = "form-control editstartdate DatePicker grey_bg" })
                                @Html.ValidationMessageFor(model => model.StartDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-8">
                                @Html.TextBoxFor(model => model.EndDate, "{0:dd/MM/yyyy}" , new {@id="EndDatePicker", @class = "form-control editenddate DatePicker grey_bg" })
                                @Html.ValidationMessageFor(model => model.EndDate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-4 col-md-10">
                                <input type="button" value="Save" class="btn btn-success chatBtns updateAdminvacation" />
                                <input type="button" value="Cancel" class="btn black-btn" data-dismiss="modal" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
