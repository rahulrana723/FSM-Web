@model FSM.Web.Areas.Employee.ViewModels.InvoiceSearchViewModel
@using FSM.Web.Common;
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
         @Html.HiddenFor(m => m.PageSize)
        @Html.HiddenFor(m => m.JobId)
        @Html.HiddenFor(m => m.JobNo)

        @*<div class="clearfix"></div>*@
        @*<div class="search_customer_block stock_top_bg">*@
        <div class="customer_head_tab">
            <div class="search_customer_block">
                <div class="form-group col-sm-3">
                    @if (Model.JobId == null )
                    {
                    @Html.EditorFor(model => model.searchkeyword, new { htmlAttributes = new { @class = "form-control", @style = "display:inline", @placeholder = " Search Keyword" } })
                    }
                    else
                    {
                    @Html.EditorFor(model => model.searchkeyword, new { htmlAttributes = new { @class = "form-control", @style = "display:inline", @placeholder = " Search Keyword",@readonly="readonly" } })
                    }
                </div>
                <div class="form-group col-sm-2">
                    @Html.EditorFor(model => model.StartDate, new { htmlAttributes = new { @class = "form-control mardate", @placeholder = "Start Date" } })
                </div>
                <div class="form-group col-sm-2">
                    @Html.EditorFor(model => model.EndDate, new { htmlAttributes = new { @class = "form-control mardate", @placeholder = "End Date" } })
                </div>
                <div class="form-group col-sm-2">
                    @Html.EnumDropDownListFor(model => model.SentStatus, "(Select)", htmlAttributes: new { @class = "form-control" })
                </div>
                <div class="form-group col-sm-3">
                    @Html.EnumDropDownListFor(model => model.CustomerType, "(Select)", htmlAttributes: new { @class = "form-control" })
                </div>
                <input type="submit" value="Search" class="search_btn black-btn search_pad" />

            </div>
            @*</div>*@
        </div><!--search_customer-->
    </div>
}
