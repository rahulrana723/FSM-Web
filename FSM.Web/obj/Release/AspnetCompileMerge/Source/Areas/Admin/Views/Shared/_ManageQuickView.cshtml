@model FSM.Web.Areas.Admin.ViewModels.ManageDocumentVM

<div class="modal fade" id="modalManageQuickView" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close closebtn" data-dismiss="modal">close</button>
                <h4 class="modal-title">Quick View !</h4>
            </div>
            <div class="modal-body Quick_Line">
                <ul>
                    @foreach (var item in Model.ImportantDocumentList)
                    {
                        if (item.DocType == "Pdf")
                        {
                            <li>
                                <a href='@Url.Content("~/"+item.FilePath)' target="_blank">
                                    <img src='@Url.Content("~/Images/pdf.png")' title="@item.Description" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.Description.Length > 15 ? item.Description.Substring(0, 15) + "..." : item.Description)</span>
                            </li>
                        }
                        else if (item.DocType == "Image")
                        {
                            <li>
                                <a href='@Url.Content("~/"+item.FilePath)' target="_blank">
                                    <img src='@Url.Content("~/"+item.FilePath)' title="@item.FileName" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.FileName.Length > 15 ? item.FileName.Substring(0, 15) + "..." : item.FileName)</span>
                            </li>
                        }
                        else if (item.DocType == "Word Excel")
                        {

                            <li>
                                <a href='@Url.Content("~/"+item.FilePath)' target="_blank">
                                    <img src='@Url.Content("~/Images/Excel.png")' title="@item.Description" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.Description.Length > 15 ? item.Description.Substring(0, 15) + "..." : item.Description)</span>
                            </li>

                        }
                        else if (item.DocType == "Word Document")
                        {

                            <li>
                                <a href='@Url.Content("~/"+item.FilePath)' target="_blank">
                                    <img src='@Url.Content("~/Images/WordDoc.png")' title="@item.Description" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.Description.Length > 15 ? item.Description.Substring(0, 15) + "..." : item.Description)</span>
                            </li>

                        }
                        else if (item.DocType == "Text File")
                        {

                            <li>
                                <a href='@Url.Content("~/"+item.FilePath)' target="_blank">
                                    <img src='@Url.Content("~/Images/Text.png")' title="@item.Description" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.Description.Length > 15 ? item.Description.Substring(0, 15) + "..." : item.Description)</span>
                            </li>

                        }
                        else
                        {
                            <li>
                                <a href='@Url.Content("~/"+item.FilePath)' target="_blank">
                                    <img src='@Url.Content("~/Images/imgdoc1.png")' title="@item.Description" alt="No Image" width="200" height="200" />
                                </a>
                                <span>@(item.Description.Length > 15 ? item.Description.Substring(0, 15) + "..." : item.Description)</span>
                            </li>
                        }

                    }
                </ul>
            </div>
            <div class="modal-footer footerLine_Rmv">
            </div>
        </div>
    </div>
</div>

