
@using FSM.Web.Models
@{
    ViewBag.Title = "Forget Password Confirmation";
    Layout = "~/Views/Shared/_LayoutPassword.cshtml"; 
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width; initial-scale=1.0; maximum-scale=1.0;" />
    <!-- STYLESHEET FIrLE -->
    <link rel="stylesheet" href="@Url.Content("~/Content/css/bootstrap.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/css/style.css")">
    <!--  SCRIPTS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <!-- bootstrap script -->
    <script src="@Url.Content("~/Scripts/js/bootstrap.min.js")" type="text/jscript"> </script>
</head>
<body id="login">
    <section id="loginForm">
        <div class="alert alert-info">
            <strong>Info!</strong>   Please check your email to reset your password. Please @Html.ActionLink("click here to log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
        </div>
        @*<div class="login_block">
        </div>*@
    </section>
</body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


