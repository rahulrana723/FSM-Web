@model FSM.Web.Areas.Employee.ViewModels.EmployeejobSearchViewModel
@using FSM.Web.Common;
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.HiddenFor(m => m.PageSize)
        <div class="search_block jobs_margin">
            <div class="form-group outer_customer col-sm-12">

                <div class="row">
                    @*@Html.HiddenFor(model => model.Keyword)*@
                    <div class="col-md-4 texbox_margin">
                        @Html.TextBoxFor(model => model.Keyword, new { @class = "form-control", placeholder = "Search Keyword" })
                    </div>

                    <div class="col-md-2">

                        @Html.EnumDropDownListFor(model => model.JobType, "(Select Job Type)", htmlAttributes: new { @class = "form-control " })
                    </div>
                    <div class="col-md-2">
                        <div class="ui-widget">
                            @Html.DropDownListFor(m => m.CustomerInfoId, Model.CustomerList, "(Select)", new { @class = "form-control Create_Customer custname add_newcustomer" })
                        </div>
                    </div>

                    <div class="col-sm-2 ui-widget">

                        <input type="submit" value="Search" class="search_btn black-btn" />

                    </div>


                    <div class="col-sm-2 ui-widget">
                        <div class="add_Job">
                            @Html.ActionLink("Add New job", "SaveJobInfo", "CustomerJob", new { @area = "Employee", CustomerId = ViewBag.CustomerId , CustomerName = ViewBag.CustomerName }, new { @class = "btn btn-primary pull-right add_new_job" })
                        </div><!--add_jobs-->
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        @Html.EditorFor(model => model.Contracted)   @Html.LabelFor(model => model.Contracted)
                    </div>
                </div>
            </div>
        </div>

        @*<div class="row">
            <div class="col-md-3">

                @Html.LabelFor(model => model.StartDate, new { @class = "col-md-12" })

                @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control Create_Customer" })
            </div>

            <div class="col-md-3">

                @Html.LabelFor(model => model.EndDate, new { @class = "col-md-12" })
                @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control Create_Customer" })
            </div>
            </div>*@
    </div>
    <div class="clearfix"></div>

}

