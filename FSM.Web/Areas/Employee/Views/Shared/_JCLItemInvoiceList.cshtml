@model FSM.Web.Areas.Employee.ViewModels.DisplayJCLItemInvoiceListViewModel
@using GridMvc.Html

@Html.Grid(Model.DisplayJCLInvoiceList).Columns(
    columns =>
    {
        columns.Add(model => model.ItemName).Titled("Item Name");
        columns.Add(model => model.BonusPerItem).Titled("Bonus Per Item");
        columns.Add(model => model.DefaultQty).Titled("Quantity");
        columns.Add(model => model.DisplayCategoryName).Titled("Category");

        columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(model => Html.ActionLink("Edit", "", null, new { @class = "editJclInvoice btn btn-default editbtngrid", href = "javascript:void(0)", @Id = model.Id, @JCLId= model.JCLId })).Filterable(false).Titled("Edit");

        columns.Add()
        .Encoded(false)
        .Sanitized(false)
        .SetWidth(30)
        .RenderValueAs(model => Html.ActionLink("Delete", "", new { }, new { @class = "deletaJclInvoice btn btn-default editbtngrid", href = "javascript:void(0)", onclick = "DeleteJclInvoiceitem('" + model.Id+ "');"})).Filterable(false).Titled("Delete");
        //.RenderValueAs(model => Html.ActionLink("Delete", "", null, new { @class = "deletaJclInvoice btn btn-default editbtngrid", onclick = "DeleteJclInvoiceitem('" + model.Id + "');", href = "javascript:void(0)", @Id = model.Id, @JCLId = model.JCLId })).Filterable(false).Titled("Delete");

    }
    ).WithPaging(Model.displayJCLItemInvoiceViewModel.PageSize).Sortable(true).EmptyText("There are no JCL Item to display.")

<div style="float: right;">
    <label>Page Size</label>
    @Html.DropDownList("ddPageSize", new List<SelectListItem>
         {
           new SelectListItem { Text="5",Value="5"},
           new SelectListItem { Text = "10", Value = "10" },
           new SelectListItem { Text = "15", Value = "15" },
           new SelectListItem { Text = "20", Value = "20" },
           new SelectListItem { Text = "25", Value = "25" },
           new SelectListItem { Text = "30", Value = "30" }
         }, new { @class = "form-control" })
</div>




